<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2d2c2c"
    tools:context="com.example.bolo.os_application.ui.HandleImageActivity">

    <Button
        android:id="@+id/bt_start_handle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/start_handle"
        android:layout_width="@dimen/match_constrain"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_completed"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="H,16:9"
        app:layout_constraintTop_toBottomOf="@+id/bt_start_handle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/match_constrain"
        android:layout_height="@dimen/match_constrain"/>

</android.support.constraint.ConstraintLayout>
